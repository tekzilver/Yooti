{
  "name": "yooti",
  "version": "1.0.0",
  "description": "A modern, safe YouTube video downloader powered by Tekzilver.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "author": "Tekzilver",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "build": {
    "appId": "com.tekzilver.yooti",
    "productName": "Yooti",
    "files": [
      "**/*",
      "!ffmpeg.exe"
    ],
    "extraResources": [
      {
        "from": "ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}